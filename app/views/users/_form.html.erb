<%= form_with(model: user, local: false ) do |form| %>
    <div class="modal-body">
      <div id="errorArea"></div>
     

      <div class="form-group mt-3">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group mt-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group mt-3">
        <%= form.label :address %>
        <%= form.text_field :address, class: "form-control" %>
      </div>

      <div class="form-group mt-3">
        <%= form.label :contact %>
        <%= form.text_field :contact, class: "form-control" %>
      </div>


        
      </div>
      <div class="modal-footer">
      <%= form.submit class: "btn btn-primary btn-lg" %>
        <%# link_to 'Back', users_path, class: "btn btn-outline-primary btn-lg" %>
      <button type="button" class="btn btn-secondary btn-lg close-modal" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
    <% end %>
